
@model Vidly.ViewModels.MoviesViewModel

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*List of movies *@

<h3>Movies</h3>

@if (Model.Movies.Count == 0)
{
    <text>No movies were found</text>
}
else
{
    <table class="table table-bordered table-hover" style="width:100%; padding:5px">
        <tr>
            <th>
                Movie Name
            </th>
            <th>
                Genre
            </th>

        </tr>


        @foreach (var movie in Model.Movies)
        {
        <tr>
            <td><a href="movies/detail/@movie.Id">@movie.Name</a></td>
            <td>@movie.Genre.Name</td>
        </tr>

        }

    </table>
}

