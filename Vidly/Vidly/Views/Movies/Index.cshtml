
@model Vidly.ViewModels.MoviesViewModel

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*List of movies *@

<h3>Movies</h3>

@if (Model.Movies.Count == 0)
{
    <text>No movies were found</text>
}
else
{
    <table class="table-striped" style="width:100%; padding:5px">
        <tr>
            <th>
                Movie Name
            </th>

        </tr>


        @foreach (var movie in Model.Movies)
        {
        <tr>
            <td>@movie.Name</td>
        </tr>

        }

    </table>
}

